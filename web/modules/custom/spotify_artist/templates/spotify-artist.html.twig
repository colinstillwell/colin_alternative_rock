<div class="spotify-artist">
  {% if artist_image %}
    <div class="spotify-artist__image">
      {{ artist_image }}
    </div>
  {% endif %}

  <div class="spotify-artist__details">
    {% if artist_name %}
      <h1 class="spotify-artist__name">{{ artist_name }}</h1>
    {% endif %}

    {% if artist_genres %}
      <div class="spotify-artist__genres">
        {{ artist_genres }}
      </div>
    {% endif %}

    {% if artist_followers %}
      <p class="spotify-artist__followers">{{ artist_followers }}</p>
    {% endif %}

    {% if artist_popularity %}
      <p class="spotify-artist__popularity">{{ artist_popularity }}</p>
    {% endif %}

    {% if artist_link %}
      <p class="spotify-artist__link">{{ artist_link }}</p>
    {% endif %}
  </div>
</div>
